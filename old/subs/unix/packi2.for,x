c************************************************************************
	subroutine packi2(in,out,n)
c
	implicit none
	integer n
	integer in(n)
	integer*2 out(n)
c
c  Pack normal integers into the 16 bit integers, with the bytes in
c  "network" order.
c
c  Input:
c    n		Number of integers to pack.
c    in		Integers to pack.
c  Output:
c    out	Output integer*2, in "network" order.
c--
c  Version for Sun, Alliant, Convex.
c
c  History:
c    rjs  10oct89 Original version.
c
c------------------------------------------------------------------------
	integer i
	do i=1,n
	  out(i) = in(i)
	enddo
	end
c************************************************************************
	subroutine unpacki2(in,out,n)
c
	implicit none
	integer n
	integer*2 in(n)
	integer out(n)
c
c  Unpack 16 bit integers, with the bytes in "network" order, into normal
c  integers.
c
c  Input:
c    n		Number of integers to pack.
c    in		Input integer*2 to unpack.
c  Output:
c    out	Output integers.
c--
c  Version for Sun, Alliant, Convex.
c
c  History:
c    rjs  10oct89 Original version.
c
c------------------------------------------------------------------------
	integer i
	do i=1,n
	  out(i) = in(i)
	enddo
	end
