#! /bin/csh -f

foreach in ($argv)
 set dir = $in:h
 if ( "$dir" == "$in" ) set dir = "."
 cd $dir
 echo Processing $in
 switch ($in)
   case *.for:
   set tmp=$in:r
   (cd $dir; ratty -D f2c -s f2c -b -I $MIRINC $in $tmp.f)
   set file = $tmp.f
   set out = $file:t
   set out = $out:r
   f77 -c -O -o ${out}.o $file
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f $file ${out}.o
   breaksw
 case *.f2c:
   set tmp=$in:r
   set file=${tmp}.c
   set out=$file:t
   set out=$out:r
   intf2c -s bsd $in $file
   cc -O -Df2c -c -o ${out}.o -I$MIRINC $file
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f ${out}.o $file
   breaksw
 case *.c:
   set out = $in:t
   set out = /tmp/$out:r
   (cd $dir; cc -O -Df2c -c -o ${out}.o -I$MIRINC $in)
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f ${out}.o
   breaksw
 default:
   echo Ignoring $in
   breaksw
 endsw
ranlib $MIRLIB/libmir.a
end

exit 0

