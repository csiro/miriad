#!/bin/csh -f
if ( "$1" == "-l" ) then
  echo /usr/local/lib /lib /usr/local/X11/lib /usr/local/lib/X11 /usr/lib /nfs/applic/miriad/lib/irix
  exit
else if ( "$1" == "-i" ) then
  foreach dir (/usr/local/lib /lib /usr/local/X11/lib /usr/local/lib/X11 /usr/lib /nfs/applic/miriad/lib/irix /usr/include )
    foreach t (include inc)
      if ( -d $dir:h/$t/$2 ) then
        echo $dir:h/$t
        exit
      endif
    end
  end
else
  foreach dir (/usr/local/lib /lib /usr/local/X11/lib /usr/local/lib/X11 /usr/lib /nfs/applic/miriad/lib/irix)
    if(-e $dir/lib$1.a || -e $dir/lib$1.so ) then
      echo $dir
      exit
    endif
  end
endif
