#!/bin/csh -f

foreach in ($argv)
 set dir = $in:h
 if ( "$dir" == "$in" ) set dir = "."
 echo Processing $in
 cd $dir
 switch ($in)
 case *.for:
   set tmp=$in:r
   set file = $tmp.f
   set out = $file:t
   set out = $out:r
   ratty -s convex -I $MIRINC $in $tmp.f
   fc -c -or none -O2 -o ${out}.o $file
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f $file ${out}.o
   breaksw
 case *.f2c
   set tmp=$in:r
   set file = ${tmp}.c
   set out = $file:t
   set out = $out:r
   intf2c -s convex $in $file
   cc -c -O -o ${out}.o -I$MIRINC -I$MIR/subs -Dconvex $file
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f $file ${out}.o
   breaksw
 case *.c:
   set out = $in:t
   set out = /tmp/$out:r
   cc -c -O -o ${out}.o -I$MIRINC -I$MIR/subs -Dconvex $in
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f ${out}.o
   breaksw
 default:
   echo Ignoring $in
   breaksw
 endsw
end

exit 0
