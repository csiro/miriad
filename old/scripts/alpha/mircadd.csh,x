#! /bin/csh -ef

foreach in ($argv)
 set dir = $in:h
 if ( "$dir" == "$in" ) set dir = "."
 cd $dir
 echo Processing $in
 switch ($in)
   case *.for:
   set tmp=$in:r
   set file = $tmp.f
   set out = $file:t
   set out = $out:r
   ratty -s alpha -b -I $MIRINC $in $tmp.f
   f77 -c -O -o ${out}.o $file
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f $file ${out}.o
   breaksw
 case *.f2c:
   set tmp=$in:r
   set file=${tmp}.c
   set out=$file:t
   set out=$out:r
   intf2c -s alpha $in $file;
   cc -O -c -o ${out}.o -I$MIRINC -I$MIR/subs -Dalpha $file
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f ${out}.o $file
   breaksw
 case *.c:
   set out = $in:t
   set out = /tmp/$out:r
   cc -O -c -o ${out}.o -I$MIRINC -I$MIR/subs -Dalpha $in
   ar rl $MIRLIB/libmir.a ${out}.o
   rm -f ${out}.o
   breaksw
 default:
   echo Ignoring $in
   breaksw
 endsw
end

exit 0
