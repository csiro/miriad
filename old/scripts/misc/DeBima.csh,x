#!/bin/csh -f

foreach dir (prog subs spec inc tools)
  if ( -e $dir ) then
    echo "You must delete $dir before starting"
    exit
  endif
end

gtar -zxvf $1
find . -exec chmod +w {} \;
rm -rf sys scripts
find . -name RCS -exec rm -rf {} \;
set psubs = (`cd prog;ls`)
foreach psub ($psubs)
  mv prog/$psub/* prog
  rm -rf prog/$psub
end

mkdir spec/xpanel
mv tools/xpanel* spec/xpanel

mkdir subs/{vms,vms/ivas,unix,unix/hpux,unix/alpha_linux}
mv subs/packALPHA.c subs/unix/alpha_linux/pack.c
mv subs/{dio.c,pack.c} subs/unix
mv subs/argsHP.for subs/unix/hpux/args.for
mv subs/txtioVMS.for subs/vms/txtio.for
mv subs/{dirs.c,args.for,args.h,iv*.for,iv*.h,*.mar,*.macro} subs/vms
rm -rf subs/vms/{ivas,packi2.mar}
rm -rf prog/{solar.for,regrid.h}
rm -rf subs/{getpb.for}
