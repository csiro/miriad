#!/bin/csh
#-----------------------------------------------------------------------------
# $Id: Nightly.linux,x 1.2 2006/07/31 01:50:38 cal103 Exp $
#-----------------------------------------------------------------------------

source ~/.login

echo " "
echo "Checking RPFITS"
if ("`mirnewer -i $MIR/inc/rpfits.inc /usr/local/include/rpfits.inc`" != "") then
  echo "Updating the version of rpfits.inc"
  cp /usr/local/include/rpfits.inc $MIR/inc/rpfits.inc
endif

if ("`mirnewer -i $MIR/bindir/linux/librpfits.a /usr/local/lib/librpfits.a`" != "") then
  echo "Updating the version of librpfits.a"
  cp /usr/local/lib/librpfits.a $MIR/bindir/linux/librpfits.a
endif

echo "Running nightly update scripts for linux machines"
echo y | mirupdate
